<%- include ./partials/heading.ejs %>
<%- include ./partials/navbar.ejs %>
<div class="budget-page">
	<!-- LEFT PANE ========================================================== -->
	<div class="left-pane">
		<h2>Overview</h2>
		<p id="monthlyIncome"></p>
		<div id="fixed-costs-overview">
			<h3>Fixed Costs</h3>
			<div class="bar-container">
				<div class="bar-progress">
				</div>
			</div>
		</div>
		<div id="investment-overview">
			<h3>Investments</h3>
			<div class="bar-container">
				<div class="bar-progress">
				</div>
			</div>
		</div>
		<div id="savings-overview">
			<h3>Savings</h3>
			<div class="bar-container">
				<div class="bar-progress">
				</div>
			</div>
		</div>
		<div id="spending-money-overview">
			<h3>Spending Money</h3>
			<div class="bar-container">
				<div class="bar-progress">
				</div>
			</div>
		</div>
	</div>

	<!-- CENTER PANE ======================================================== -->
	<!-- Each table is populated via JS -->
	<div class="center-pane">
		<h2>Budget</h2>

		<!-- FIXED COST ITEMS-->
		<h3>Fixed Costs</h3>
		<table id="fixed-cost-items"></table>

		<!-- INVESTMENT ITEMS-->
		<h3>Investments</h3></table>

	<!-- SAVINGS ITEMS -->
		<h3>Savings</h3>
		<table id="savings-items"></table>

		<!-- SPEDING MONEY ITEMS -->
		<h3>Spending Money</h3>
		<table id="spending-money-items"></table>

	</div>
	<div class="right-pane">
		<h2>Add Item</h2>
		<h2>Adjust Income</h2>
	</div>
</div>

<!-- Load Javascript and JQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="./JavaScript/budget-data.js"></script>
<%- include ./partials/footer.ejs %>
